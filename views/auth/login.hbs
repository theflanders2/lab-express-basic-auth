<h1>Login Page</h1>

<div id="login-form">
  <h2>Login</h2>

  <form action="/login" method="POST">

    <label> Username
      <input type="text" name="username" placeholder="Dave Chappelle" />
    </label>

    <label>Password
      <input type="password" name="password" placeholder="********" />
    </label>

    <button type="submit">Login</button>

    {{#if errorMessage}}
      <p class="error" style="color:red;">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>
